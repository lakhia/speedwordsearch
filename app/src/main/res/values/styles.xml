<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.V21.Theme.AppCompat.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/black_overlay</item>
        <item name="colorAccent">@color/pinkAccent</item>
        <!-- don't show button text in all caps -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHighlight">@color/lightBlue</item>
        <item name="android:windowEnterAnimation">@anim/trans_left_in</item>
        <item name="android:windowExitAnimation">@anim/trans_right_out</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@color/black_overlay</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="PuzzleLetter">
        <item name="android:background">@drawable/cell</item>
        <item name="android:colorBackground">@color/lightBlue</item>
        <item name="android:textColor">@color/colorLetters</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="WordList">
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/pinkAccent</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
    </style>

</resources>
